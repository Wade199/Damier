<!doctype html>
<html lang="fr">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
   {% block stylesheets %}
    <!-- Bootstrap CSS -->
    <link href="https://bootswatch.com/5/morph/bootstrap.rtl.min.css" rel="stylesheet">
    
    {% set stylecss = 'style/style.css' %}
    <link rel='stylesheet' href="{{asset(stylecss) }}">
   {% endblock %}
    <title>{% block title %}Damier - {% endblock %}</title>
  </head>
  <body style="background-image: url(https://img.freepik.com/fotos-premium/o-conceito-de-uma-feroz-batalha-de-xadrez-desperta-ideias-criativas-e-estrategicas-vertical-mobile-wallpaper_896558-14396.jpg);color: #fff;  background-color: #5e86af; background-size: cover; height: 40vh;  margin: 0px 0 0 0px; background-size: 50% auto;">
   
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
          <a class="navbar-brand" href="{{path('index')}}">Jeu De Dame</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
      
          <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav me-auto">
              <li class="nav-item">
                <a class="nav-link active" href="{{path('index')}}">Accueil
                  <span class="visually-hidden">(current)</span>
                </a>
             {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('app_login')}}">Se connecter</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('app_register')}}">Je souhaite m'inscrire</a>
                    </li>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('app_profil')}}">
                            Mon profil
                        </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="{{path('app_classement')}}">
                          Classement
                      </a>
                  </li>
                    <li class="nav-item">
                      <a class="nav-link active" href="{{path('Damier')}}">Damier
                    </a>
                </li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('app_mots')}}">
                            Gestion du vocabulaire
                        </a>
                    </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('app_logout')}}">
                            Se d√©connecter
                        </a>
                    </li>
                    {% endif %}
					</ul>
				</div>
			</div>
		</nav>

		{% for message in app.flashes('notice') %}
			<h2 class="alert alert-warning text-center mt-4 mb-4" role="alert">
				{{ message }}
			</h2>
		{% endfor %}


    </div>
  </div>
</nav>

  {% block body %}{% endblock %} 
   
  {% block javascripts %}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
  {% endblock %}

</div>  
</html>